---
interface Props {
  url?: string;
}

const { url } = Astro.props;
---

{
  url ? (
    <a href={url}>
      <div id="inner-wrapper" class="all-0 bento-border bento-bg clickable">
        <slot />
      </div>
    </a>
  ) : (
    <div id="inner-wrapper" class="all-0 bento-border bento-bg">
      <slot />
    </div>
  )
}

<style>
  #inner-wrapper {
    @apply absolute m-4 flex flex-col justify-center;
  }
</style>
