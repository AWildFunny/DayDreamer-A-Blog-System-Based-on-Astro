<div
  id="inner-wrapper"
  class="absolute all-0 m-4 flex flex-col justify-center bento-border primary-color"
  onclick=""
>
  <div class="text-right p-4">
    <img src="/infj.svg" alt="INFJ" class="absolute left-0 bottom-0 h-[120%]" />
    <p class="absolute top-4 right-4 text-sm">
      <i class="ri-user-heart-line"></i> MBTI 人格类型
    </p>
    <h3 class="text-[#33a474]">
      INFJ<br />提倡者
    </h3>
    <a
      href="https://www.16personalities.com/infj-personality"
      class="absolute bottom-4 right-4 text-sm link"
      target="_blank"
    >
      了解更多 <i class="ri-external-link-line"></i>
    </a>
  </div>
</div>

<style>
  #inner-wrapper {
    @apply transition-all bg-blend-overlay;
    @apply bg-white dark:bg-black;
  }

  h3,
  p,
  a {
    @apply transition-all;
  }

  #inner-wrapper:hover {
    background-image: linear-gradient(
      to right,
      rgba(51, 164, 116, 0.5),
      rgba(51, 164, 116, 1)
    );
    @apply bg-transparent;
    @apply text-white;
  }

  #inner-wrapper:hover p,
  #inner-wrapper:hover h3 {
    @apply text-white;
  }
</style>
