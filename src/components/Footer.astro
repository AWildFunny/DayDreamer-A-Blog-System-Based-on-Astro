---
import CC from "./badges/CC.astro";
import NotByAI from "./badges/NotByAI.astro";
import Menu from "./menu/Menu.astro";
import Path from "./Path.astro";

interface Props {
  path: PathItem[];
}

const { path } = Astro.props;
---

